{
    "name": "drewlabs/soap-client",
    "description": "Simple SOAP HTTP client implementation",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": ">=9"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Soap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Soap\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "drewlabs/async": "^0.1.4",
        "drewlabs/psr7": "^0.1.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0|^2.0",
        "psr/http-message": "^1.0|^2.0"
    }
}
